<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/nurse"/>
    </RelativeLayout>

    <TextView
        android:paddingTop="20dp"

        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="info personnelles:"
        android:fontFamily="cursive"
        android:textColor="#8EA7E9"
        android:textSize="30sp"
        android:paddingStart="10dp"/>

    <EditText

        android:paddingStart="10dp"
        android:id="@+id/etNom1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="nom complet"
        android:fontFamily="cursive"
        android:cursorVisible="false"
        android:textColorHint="#526D82"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/etstyle"/>

    <EditText
        android:fontFamily="cursive"
        android:id="@+id/etcin1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="CIN"
        android:paddingStart="10dp"
        android:textColorHint="#526D82"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:maxEms="8"
        android:minEms="8"
        android:inputType="number"
        android:background="@drawable/etstyle"
        />
    <EditText
        android:fontFamily="cursive"
        android:id="@+id/etphone1"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="TÃ©l"
        android:textColorHint="#526D82"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/etstyle"
        android:inputType="phone"
        android:maxEms="8"
        android:minEms="8"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:fontFamily="cursive"
            android:id="@+id/rgstrbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="29dp"
            android:backgroundTint="#8EA7E9"
            android:text="inscri" />


    </RelativeLayout>
</LinearLayout>